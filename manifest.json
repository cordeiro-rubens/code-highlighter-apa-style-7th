{
    "manifest_version": 3,
    "name": "Code Highlighter and APA Styles",
    "description": "A Chrome extension to highlight code and apply APA styles in content editable elements .",
    "version": "0.0.11",
    "icons": {
        "16": "./icons/16.png",
        "32": "./icons/32.png",
        "48": "./icons/48.png",
        "128": "./icons/128.png",
        "256": "./icons/256.png",
        "512": "./icons/512.png"
    },
    "background": {
        "service_worker": "./service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "./highlight.min.js",
                "./content-script.js"
            ],
            "css": [
                "./content-style.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}